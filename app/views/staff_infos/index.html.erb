<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staff_infos.each do |staff_info| %>
      <tr>
        <td><%= staff_info.name %></td>
        <td id="common_button_staff">
            <%= button_to '参照', staff_info , :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent', method: :get %>
            <%= button_to '編集', edit_staff_info_path(staff_info) ,:class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent', method: :get %>
            <%= button_to '削除', staff_info, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent', method: :delete, data: { confirm: '本当に良いですか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

