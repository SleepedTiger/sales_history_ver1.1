<div id="login-head">
  <h1>社員ログイン</h1>
</div>

<div id="login">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>








<div class="field">
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <%= f.label :staff_id, 'staff_id', {:class => 'mdl-textfield__label'} %>
  <%= f.text_field :staff_id ,{:class => 'mdl-textfield__input'} %>
  </div>



<div class="field">
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <%= f.label :password, "パスワード" ,{:class => 'mdl-textfield__label'} %>
  <%= f.password_field :password, :class => 'mdl-textfield__input', autocomplete: "off" %>
</div>
</div>



  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "設定を保持する。" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
</div>
