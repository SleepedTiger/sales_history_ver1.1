<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>活動日時</th>
      <th>会社名</th>
      <th>営業区分</th>
      <th>営業成果</th>
      <th>営業担当者名</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.activity_time %></td>
        <td><%= history.customer.company_name %></td>
        <td><%= history.sales_category %></td>
        <td><%= history.sales_achievement %></td>
        <td><%= history.staff_info.name %></td>
        <td><%= history.detail %></td>
        <td id="common_button">
            <%= button_to '参照', history , :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent', method: :get %>
            <%= button_to '編集', edit_history_path(history) ,:class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent', method: :get %>
            <%= button_to '削除', history, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent', method: :delete, data: { confirm: '本当に良いですか？' } %>
        </td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規履歴登録', new_history_path %>

<%= paginate @histories %>
